<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.CreateAccountActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:layout_marginTop="51dp"
        android:text="회원가입"
        android:textSize="40sp"
        android:id="@+id/tv_create_account_text"
        android:textColor="@color/black"
        android:textStyle="normal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_id_text"
        android:text="아이디"
        app:layout_constraintTop_toBottomOf="@id/tv_create_account_text"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="42dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:background="@drawable/shape_create_account_15"
        android:id="@+id/et_create_account_id"
        app:layout_constraintTop_toBottomOf="@id/tv_id_text"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:paddingStart="19dp"
        android:hint="테스트입니다."
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 정보가 존재합니다."
        android:textColor="@color/error_red"
        android:id="@+id/tv_id_error"
        app:layout_constraintTop_toBottomOf="@id/et_create_account_id"
        app:layout_constraintStart_toStartOf="@id/et_create_account_id"
        android:layout_marginTop="13dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_pw_text"
        android:text="비밀번호"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_id_error"
        app:layout_constraintStart_toStartOf="@id/tv_id_text"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:background="@drawable/shape_create_account_15"
        android:id="@+id/et_create_account_pw"
        app:layout_constraintTop_toBottomOf="@id/tv_pw_text"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:paddingStart="19dp"
        android:hint="테스트입니다."
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_check_pw_text"
        android:text="비밀번호 확인"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_create_account_pw"
        app:layout_constraintStart_toStartOf="@id/tv_id_text"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:background="@drawable/shape_create_account_15"
        android:id="@+id/et_create_account_pw_check"
        app:layout_constraintTop_toBottomOf="@id/tv_check_pw_text"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:paddingStart="19dp"
        android:hint="테스트입니다."
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력하신 비밀번호가 일치하지 않습니다."
        android:textColor="@color/error_red"
        android:id="@+id/tv_pw_error"
        app:layout_constraintTop_toBottomOf="@id/et_create_account_pw_check"
        app:layout_constraintStart_toStartOf="@id/et_create_account_pw_check"
        android:layout_marginTop="17dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 권한"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_pw_error"
        app:layout_constraintStart_toStartOf="@id/tv_id_text"
        android:layout_marginTop="22dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>