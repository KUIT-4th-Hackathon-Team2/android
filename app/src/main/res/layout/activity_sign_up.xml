<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".signup.SignUpActivity">

    <TextView
        android:id="@+id/tv_sign_up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sign_up_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="137dp"
        android:text="아이디"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_sign_up_id"
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/img_login_box"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up_id"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_id" />

    <TextView
        android:id="@+id/tv_sign_up_id_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="회원 정보가 존재합니다."
        android:textColor="@color/warning"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up_id"
        app:layout_constraintTop_toBottomOf="@id/iv_sign_up_id" />


    <EditText
        android:id="@+id/et_sign_up_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:hint="아이디"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@id/iv_sign_up_id"
        app:layout_constraintTop_toTopOf="@id/iv_sign_up_id" />


    <TextView
        android:id="@+id/tv_sign_up_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="42dp"
        android:text="비밀번호"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_sign_up_id" />

    <ImageView
        android:id="@+id/iv_sign_up_password"
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/img_login_box"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up_password"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_password" />

    <EditText
        android:id="@+id/et_sign_up_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/iv_sign_up_password"
        app:layout_constraintTop_toTopOf="@id/iv_sign_up_password" />


    <TextView
        android:id="@+id/tv_sign_up_password_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:text="비밀번호 확인"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_sign_up_password" />

    <TextView
        android:id="@+id/tv_sign_up_password_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="입력하신 비밀번호가 일치하지 않습니다."
        android:textColor="@color/warning"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up_id"
        app:layout_constraintTop_toBottomOf="@id/iv_sign_up_password_check" />

    <ImageView
        android:id="@+id/iv_sign_up_password_check"
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/img_login_box"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up_password_check"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_password_check" />

    <EditText
        android:id="@+id/et_sign_up_password_check"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/iv_sign_up_password_check"
        app:layout_constraintTop_toTopOf="@id/iv_sign_up_password_check" />

    <TextView
        android:id="@+id/tv_sign_up_authority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="계정 권한"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up_password_check"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_password_warning" />

    <CheckBox
        android:id="@+id/cb_sign_up_admin"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="관리자"
        app:layout_constraintStart_toStartOf="@id/iv_sign_up_password_check"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_authority" />

    <CheckBox
        android:id="@+id/cb_sign_up_user"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="10dp"
        android:text="사용자"
        app:layout_constraintStart_toStartOf="@id/iv_sign_up_password_check"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_authority" />

    <TextView
        android:id="@+id/tv_sign_up_authority_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="한가지 권한을 선택해 주세요."
        android:textColor="@color/warning"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up_id"
        app:layout_constraintTop_toBottomOf="@id/cb_sign_up_admin" />

    <ImageView
        android:id="@+id/btn_sign_up_sign_up"
        android:layout_width="290dp"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_authority_warning" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_sign_up_sign_up" />


</androidx.constraintlayout.widget.ConstraintLayout>